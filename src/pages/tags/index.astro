---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../essays/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "Tag Index";
---

<BaseLayout title={pageTitle} header_title={pageTitle} header_punc="#">
  <div class="tags" id="text">
    {
      tags.map((tag) => (
        <p class="tag">
          <strong><a href={`/tags/${tag}`}>{tag}</a><br/></strong>
        </p>
      ))
    }
  </div>
</BaseLayout>
<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
  }
  .tag {
    margin-bottom: 5px;
    width: 100%;
  }
  .tag a {
    text-transform: uppercase;
    text-decoration: none;
  }
  .tag a:hover {
    color: var(--hover-gray);
  }
</style>
